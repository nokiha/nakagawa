<% @page_title = "患者一覧" %>
<h1><%= @page_title %></h1>

<% if @patients.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>id</th>
        <th>名前</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td style="text-align: right"><%= patient.id %></td>
          <td><%= link_to patient.username, [:admin, patient] %></td>
          
          <td>
            <%= link_to "削除", [:admin, patient], method: :delete,
              data: { confirm: "本当に削除しますか?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @patients %>
<% else %>
  <p>会員情報がありません。</p>
<% end %>